{
    "name": "mirror",
    "version": "0.0.1",
    "manifest_version": 2,
    "browser_action": {
        "default_title": "Mirror tabs!",
        "default_popup": "popup.html"
    },
    "permissions": [
          "tabs"
        ],
    "background": {
    "scripts": ["background/eventBroadcasting.js","background/tabCoupling.js"],
    "persistent": false
	},
    "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*"],
            "js": ["content/dom.js","content/eventCapturing.js","content/eventDispatching.js"],
            "run_at": "document_end",
            "all_frames": true
        }
    ]    
}