{
  "name": "mirror",
  "version": "0.0.1",
  "manifest_version": 2,
  "browser_action": {
    "default_title": "Mirror tabs!",
    "default_popup": "popup/index.html"
  },
  "permissions": [
    "tabs"
  ],
  "background": {
    "scripts": [
      "background/tabs.js",
      "background/eventBroadcasting.js",
      "background/tabCoupling.js",
      "background/configuration.js",
      "background/init.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "content/dom.js",
        "content/eventCapturing.js",
        "content/eventDispatching.js",
        "content/ui.js"
      ],
      "run_at": "document_end",
      "all_frames": true
    }
  ]
}